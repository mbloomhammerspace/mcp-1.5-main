[Unit]
Description=Milvus Port Forward Service
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/mcp-1.5-main
Environment=KUBECONFIG=/home/ubuntu/.kube/config
ExecStart=/usr/bin/kubectl port-forward svc/milvus 19530:19530
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
